<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:checkable="true">

    <TextView
        android:id="@+id/measurement_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/measurement_type_image"
        app:layout_constraintStart_toStartOf="@+id/measurement_type_image"
        app:layout_constraintTop_toBottomOf="@+id/measurement_type_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/measurement_type_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>